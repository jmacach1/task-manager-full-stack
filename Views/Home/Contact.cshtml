@{
  ViewData["Title"] = "Contact Page";
}

<main class="container-fluid">
  <div class="text-center">
    <h1 class="display-4">Contact Us</h1>
  </div>

  <div class="container">
    <form id="contactForm">
      <!-- Name -->
      <div class="form-group">
        <label for="sender">Name</label>
        <input type="text" id="sender" name="sender" class="form-control" placeholder="Your name.." required>
      </div>

      <!-- Email -->
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Your Email" required>
      </div>

      <!-- Message -->
      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" class="form-control" rows="3" required>
                </textarea>
      </div>

      <div class="form-group buton-div">
        <input type="submit" id="sendBtn" class="btn btn-primary" value="Send Message" />
      </div>
    </form>
  </div>
</main>

<section id="tmModal" class="tm-modal">
  <div class="alert alert-danger tm-modal-content">
    <h3>Task Input Error</h3>
    <span id="closeModal" class="close">&times;</span>
    <p id="modalMessage">Some text in the Modal..</p>
  </div>
</section>

<script src="~/js/contact.js"></script>